<Window x:Class="WebSocketServer.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebSocketServer.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Connect" Click="ConnectButton_Click" Margin="5"/>
            <RichTextBox x:Name="StatusText" Height="50" IsReadOnly="True" Margin="5"/>
            <TextBox x:Name="UsernameText" Height="30" Margin="2" Width="270"/>
            <TextBox x:Name="EmailText" Height="30" Margin="2" Width="270"/>
            <TextBox x:Name="PasswordText" Height="30" Margin="2" Width="270"/>
            <Button Content="Send" Click="SendButton_Click" Margin="5"/>
            <RichTextBox x:Name="OutputText" Height="150" IsReadOnly="True" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>